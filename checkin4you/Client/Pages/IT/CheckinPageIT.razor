@page "/it/checkin"

<div class="d-flex flex-column p-5 vh-100">
    <div class="h-50 d-flex align-items-center justify-content-center">
        <h1>Hai un numero di prenotazione?</h1>
    </div>
    <div class="h-50 d-flex align-items-center justify-content-center">
        <RadzenButton Style="background-color: #40A535; height: 50%; width: 25%;" Click="@NavigateToWithReservationPage">
            SI, ho un numero di prenotazione!
        </RadzenButton>
        <div style="width: 20%"></div>
        <RadzenButton Style="background-color: #9e2b25; height: 50%; width: 25%;" Click="@NavigateToWithoutReservationPage">
            NO, non ho un numero di prenotazione!
        </RadzenButton>
    </div>
</div>
